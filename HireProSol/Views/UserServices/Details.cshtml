@model HireProSol.Models.ApplicationUserService

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6 ">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Details</h4>
                <p class="card-description">
                    Service request
                </p>
                <div class="table-responsive">
                    <table class="table table-hover text-left">
                        <tbody>
                            <tr>
                                <td>
                                    Caregiver
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.Caregiver.FirstName) @Html.DisplayFor(model => model.Caregiver.LastName)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    Service requested
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.Service.Name)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    Status
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.Status.Name)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    Customer Name
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.RequestedOn)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.RequestedOn)
                                </td>
                            </tr>

                            
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<a href="@Url.Action("Index", "Licenses")" class="btn btn-primary">
    Back to List
    <span class="icon-list" aria-hidden="true"></span>
</a>